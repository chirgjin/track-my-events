{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "typeRoots": ["src/@types/", "node_modules/@types/"],
    "types": ["@types/node"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "build"]
}
