{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "build",
      "esModuleInterop": true,
      "target": "es2020",
      "module": "commonjs",
      "lib": ["es2020"],
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "incremental": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "declaration": false,
      "moduleResolution": "node",
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "rootDir": ".",
      "sourceMap": true
    },
    "include": ["services/**/*"],
    "exclude": ["node_modules", "services/**/build"]
  }
  